{
  "compilerOptions": {
    "outDir": "./dist/",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES2022",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "sourceMap": true,
    "jsx": "react",
    "baseUrl": "./src/",
    "typeRoots": ["./node_modules/@types", "./src/types"],  
    "paths": {
      "@/lib/*": ["lib/*"],
      "@/config": ["config"],
      "@/components": ["components/index"],
    },
  },
  "include": ["./src"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
    },
  },
}
